<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://tools.android.com/tools">

    <!-- Permissions required for Virtual Engine functionality -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <application
        android:name=".SpidyEngineApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
        android:extractNativeLibs="true"
        tools:targetApi="31">
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- BlackBox Core Components - Required for Virtual Engine -->
        <activity
            android:name="top.niunaijun.blackbox.app.LauncherActivity"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|fontScale|layoutDirection|density"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleTask"
            android:process=":p0"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <activity
            android:name="top.niunaijun.blackbox.proxy.ProxyActivity$P0"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|fontScale|layoutDirection|density"
            android:excludeFromRecents="true"
            android:exported="false"
            android:process=":p0"
            android:taskAffinity="top.niunaijun.blackbox.p0"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <activity
            android:name="top.niunaijun.blackbox.proxy.TransparentProxyActivity$P0"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|fontScale|layoutDirection|density"
            android:excludeFromRecents="true"
            android:exported="false"
            android:process=":p0"
            android:taskAffinity="top.niunaijun.blackbox.p0"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- Daemon Service for Virtual Engine -->
        <service
            android:name="top.niunaijun.blackbox.core.system.DaemonService"
            android:enabled="true"
            android:exported="false"
            android:process=":daemon" />

        <!-- System Call Provider for BlackBox -->
        <provider
            android:name="top.niunaijun.blackbox.core.system.SystemCallProvider"
            android:authorities="${applicationId}.server.system"
            android:enabled="true"
            android:exported="false"
            android:process=":daemon" />

        <!-- Proxy Services for Virtual Environment -->
        <service
            android:name="top.niunaijun.blackbox.proxy.ProxyService$P0"
            android:enabled="true"
            android:exported="false"
            android:process=":p0" />

        <service
            android:name="top.niunaijun.blackbox.proxy.ProxyJobService$P0"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:process=":p0" />

        <!-- Proxy Receivers -->
        <receiver
            android:name="top.niunaijun.blackbox.proxy.ProxyBroadcastReceiver$P0"
            android:enabled="true"
            android:exported="false"
            android:process=":p0" />

        <!-- Content Provider Proxies -->
        <provider
            android:name="top.niunaijun.blackbox.proxy.ProxyContentProvider$P0"
            android:authorities="${applicationId}.provider.p0"
            android:enabled="true"
            android:exported="false"
            android:process=":p0" />

        <provider
            android:name="top.niunaijun.blackbox.fake.provider.FileProvider"
            android:authorities="${applicationId}.file.provider"
            android:enabled="true"
            android:exported="false"
            android:grantUriPermissions="true" />

    </application>

</manifest>
